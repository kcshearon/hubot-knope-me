random = (obj = knopes) ->
  keys = Object.keys(obj)
  randomNum = Math.floor(Math.random() * keys.length)
  obj[keys[randomNum]]

module.exports = (robot) ->
  robot.respond /knope(.*)/i, (msg) ->
    knopeThing = msg.match[1]

    # be very leslie if someone types it wrong.
    unless knopeThing.match /^ me/
      return msg.send "Oh #{msg.message.user.name}, you wild and crazy flower pot. It's `/knope me`."

    # sub off 'me' and the spaces so we can match knopes keys
    knopeThing = knopeThing.replace /^ me\s*/, ''

    switch knopeThing
      when ''                        # /knope me
        msg.send random()
      when 'dancing'                   # /knope me dancing
        dancing =
          d1: knopes['dancing together']
          d2: knopes['oh yeah']
          d3: knopes['victory dance']
          d4: knopes['elf dance']
          d5: knopes['party']
          d6: knopes['moonwalk']
        msg.send random(dancing)
      when 'laughing'                   # /knope me laughing
        laughing =
          l1: knopes['duh']
          l2: knopes['that is ridiculous']
          l3: knopes['ahahahaha']
        msg.send random(laughing)
      when 'waffles'                   # /knope me waffles
        waffles =
          w1: knopes['friendship waffles']
          w2: knopes['nom']
          w3: knopes['delicious waffles']
        msg.send random(waffles)
      when 'what'                   # /knope me what
        what =
          wh1: knopes['whaaaat']
          wh2: knopes['uh what']
        msg.send random(what)
      else
        if knopes[knopeThing]        # /knope me KNOPE_THING
          msg.send knopes[knopeThing]
        else
          msg.send "Oh #{msg.message.user.name}, you beautiful, naive, sophisticated newborn baby. '#{knopeThing}' is not a supported knope thing."
